# Environment Configuration
NODE_ENV=production

# MariaDB Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mymoney
DB_USER=root
DB_PASSWORD=password
DB_ROOT_PASSWORD=password
DB_SSL=false
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_TIMEZONE=+00:00
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Application Configuration
APP_PORT=3001
APP_NAME="Personal Finance Manager"

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
STRICT_RATE_LIMIT_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024
REDIS_DB=0
REDIS_URL=redis://:redis_password_2024@localhost:6379
CACHE_TTL_DEFAULT=300

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# API Configuration
API_TIMEOUT=30000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001,http://192.168.1.10:3001

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# Node.js Configuration
NODE_OPTIONS=--max-old-space-size=512